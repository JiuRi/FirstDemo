<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text1"
                    android:singleLine="true"
                    android:maxLines="2"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:text="陳嘉賓昨日在社交網處與黃頌祈合照宣佈結婚喜訊。"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/n1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/n2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/n3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
        </LinearLayout>
                <TextView
                    android:id="@+id/text2"
                    android:textSize="15sp"
                    android:maxLines="2"
                    android:text="【明報喜訊】恭喜!恭喜!27歲[宅男女神]陳嘉賓昨日宣佈將拍拖逾4年的初戀情人、35歲半億身家的金融闊少......"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


        <LinearLayout
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:layout_below="@id/news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:padding="3dp"
                android:gravity="center"
                android:textColor="@color/titlecolor"
                android:text="娛樂"
                android:background="@color/yulebg"
                android:layout_width="50dp"
                android:layout_height="25dp"/>
            <TextView
                android:textColor="@color/time"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:text="11小時前"
                android:layout_width="wrap_content"
                android:layout_height="25dp"/>
            <LinearLayout
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp">
                <ImageView
                    android:layout_gravity="bottom"
                    android:src="@mipmap/ear"
                    android:layout_width="16dp"
                    android:layout_height="16dp"/>
                <TextView
                    android:textColor="@color/ear"
                    android:gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="bottom"
                    android:text="1.55k"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"/>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>

