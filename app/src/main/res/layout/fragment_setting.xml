<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="0dp"
        android:theme="@style/ToolbarTheme"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="設置"
                android:textColor="@color/titlecolor"
                android:textSize="25sp"
                android:textStyle="bold"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/recyclebg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="字體大小"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/toolbar_titlesize"/>

                <TextView
                    android:id="@+id/size_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="較大"
                    android:textSize="18sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/detail_devider_line_bg"/>



            <SeekBar
                android:id="@+id/seekbar_self"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:max="4"
                android:progress="2"
                android:progressDrawable="@drawable/bg_bar"
                android:thumb="@drawable/thumb_bar"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="開啟首頁"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/toolbar_titlesize"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自動選擇首頁"

                    android:textSize="18sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/detail_devider_line_bg"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="接收新聞推播通知"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/toolbar_titlesize"/>

                    <ImageView
                        android:id="@+id/push_swich"
                        android:scaleType="centerCrop"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/turn_on"
                        android:layout_width="50dp"
                        android:layout_height="30dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/detail_devider_line_bg"/>



            <LinearLayout
                android:id="@+id/share_tofrends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="20dp"
                        android:text="分享明报新闻给好友"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/toolbar_titlesize"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/right"/>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/detail_devider_line_bg"/>
            </LinearLayout>

          <RelativeLayout
              android:id="@+id/version_detail"
              android:layout_width="match_parent"
              android:layout_height="50dp">
              <TextView
                  android:layout_alignParentBottom="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_marginTop="20dp"
                  android:text="版本及聲明"
                  android:textColor="@android:color/black"
                  android:textSize="@dimen/toolbar_titlesize"/>
              <ImageView
                  android:layout_alignParentBottom="true"
                  android:layout_alignParentRight="true"
                  android:src="@mipmap/right"
                  android:layout_width="30dp"
                  android:layout_height="30dp"/>
          </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/detail_devider_line_bg"/>
        </LinearLayout>




        <android.support.v7.widget.CardView
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#8888"
            android:visibility="gone"
            app:cardCornerRadius="3dp">

            <TextView
                android:id="@+id/textsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="明报新闻"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>